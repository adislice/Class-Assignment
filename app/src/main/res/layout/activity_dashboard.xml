<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#00FFFFFF"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="24dp"
        app:contentInsetStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_round_person_outline_24"
                android:backgroundTint="@color/text_dark"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/text_dark"
                android:textSize="26sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user_avatar" />
        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai, adi"
            android:textSize="22dp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_margin="10dp"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="150dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rectangle"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                />
            <TextView
                android:id="@+id/label_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Anda"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txt_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:text="Rp. 20.000.000"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold" />
            <View
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_baseline_payment_24"
                android:backgroundTint="@color/white" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="18dp"
                android:background="#00FFFFFF"
                android:drawableEnd="@drawable/ic_round_arrow_forward_24"
                android:drawableTint="@color/white"
                android:text="Lihat selengkapnya"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal"/>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Logout"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:drawableEnd="@drawable/ic_round_logout_24"
            android:drawableTint="@color/white"
            android:paddingRight="20dp"
            android:backgroundTint="@color/purple_500"
            android:background="@drawable/shape_rectangle"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>